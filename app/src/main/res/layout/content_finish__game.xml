<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_finish__game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:noHistory="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="es.iesnervion.qa.ui.View.Finish_Game"
    tools:showIn="@layout/activity_finish__game">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:id="@+id/finishGameCargaResp">

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:indeterminateTint="@color/colorCircleLoading"
            android:id="@+id/content_finish_progressBar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/content_finish_progressBar"
            android:layout_centerHorizontal="true"
            android:id="@+id/info_loaging_finish_gamming"
            android:text="@string/loadingAnswers" />
        
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/finishGameRespuestasMostrar"
        android:visibility="gone"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/respuestasContentFinish"
            android:text="@string/respuestasContentFinish"
            android:layout_centerHorizontal="true"
            android:textSize="40sp" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:id="@+id/linear_finishGame"
            android:layout_below="@id/respuestasContentFinish"
            android:background="#000" />


    </RelativeLayout>

</RelativeLayout>
